@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}


<style>
    .wrapper-class {
        width: 100%;
        margin-top: 0px;
    }

    .inner-wrapper {
        margin-left: 1%;
        margin-right: 1%;
        padding-top: 35px;
    }

    .background-div {
        width: 100%;
        height: 50%;
    }

    .justify-content-sm-center {
        padding-left: 5%;
        padding-right: 5%;
        text-align: center;
    }

    #story-wrapper{
        text-align:left;
        font-family:'Times New Roman', serif;
    }

    .story-section {
        padding-top: 15px;
    }

    .inner-call-to-action{
        text-align:left;
        font-family:'Times New Roman', serif;
    }

    .people_image {
        width: 100%;
        margin-top:45px;
    }

    .row {
        margin-right: -15px;
    }

    .img-fluid {
        width: 100%;
    }

    h1 {
        font-family:'Times New Roman', Times, serif;
        font-size: 65px;
        font-weight: 100;
    }

    p {
        font-family: Helvetica,Arial,Verdana,sans-serif;
        line-height: 1.5;
        font-size: 18px;
    }

  

</style>

<div class="wrapper-class">

    <div class="inner-wrapper">
        <div class="justify-content-sm-center">
            <div class="flex-sm-row">

                <div class="flex-sm-row">
                    <div class="flex-sm-column">
                        <div class="background-div">
                            <div class="justify-content-sm-center">
                                <h1>Our Story</h1>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="w-100"></div>

                <div class="flex-sm-row">
                    <div class="flex-sm-column">
                        <div class="people_image">
                            <img src="https://scontent-dfw5-2.xx.fbcdn.net/v/t1.0-9/76605032_2540764819310876_2961002272642826240_o.jpg?_nc_cat=102&_nc_ohc=I1LWDS2gMm8AQkN_fuPBpEQ1WIHFOTFVB8wIp9UKh8hbH6v9GK1290Pvw&_nc_ht=scontent-dfw5-2.xx&oh=5e62b86b28c9c8fab838632dade6a955&oe=5E81615A" class="img-fluid" />
                        </div>
                    </div>
                </div>

                <div class="w-100"></div>

                <div class="flex-sm-row">
                    <div class="flex-sm-column">
                        <div class="wrapper">
                            <div id="story-wrapper">
                                <h1>How We Started</h1>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="flex-sm-row">
                    <div class="flex-sm-column">
                        <div id="story-wrapper" class="story-section">
                            <p>
                                Nicholas Pet Haven was started by Nicholas Nash when he was only 13.
                                He is now 19 and has helped rescue so many animals and made some major changes for the dogs and cats.
                                Please support his efforts as we continue to grow.
                                Our Adoption House is located at 12903 Hwy 155 South in Tyler  TX.
                                Come meet our sweet rescued babies available for adoption!
                                We are open from 10am-2pm, Monday-Saturday.
                                If you are interested but need to meet at a different time, please contact us at the phone number provided or by messaging us.
                                Thank you for your support!
                            </p>
                        </div>
                    </div>
                </div>

                <div class="flex-sm-row">
                    <div class="flex-sm-column">
                        <div class="call-to-action">
                            <div class="inner-call-to-action">
                                <h2>Interested in Volunteering? </h2>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
        

</div>