                @Html.DisplayFor(model => model.Pet.Age)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Pet.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Pet.Description)
            </dd>
        </dl>

        <form method="post" style="text-align:center">
            <input type="hidden" asp-for="Pet.ID" />
            <input type="submit" value="Delete" class="btn btn-default" /> <br/>
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>

